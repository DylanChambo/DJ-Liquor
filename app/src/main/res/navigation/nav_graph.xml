<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <action
        android:id="@+id/To_SearchFragment"
        app:destination="@id/SearchFragment" />

    <action
        android:id="@+id/To_DetailFragment"
        app:destination="@id/SearchFragment" />

    <action
        android:id="@+id/To_HomeFragment"
        app:destination="@id/SearchFragment" />

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.djliquor.app.fragments.HomeFragment"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.djliquor.app.fragments.SearchFragment"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="search"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="category"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.djliquor.app.fragments.DetailFragment"
        tools:layout="@layout/fragment_detail" >
    </fragment>
</navigation>